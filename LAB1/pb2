#include <bits/stdc++.h>
using namespace std;

class Complex {
private:
    double a; // partea reală
    double b; // partea imaginară

public:
    Complex(double real = 0, double imag = 0) : a(real), b(imag) {}

    double absVal() const {
        return sqrt(a * a + b * b);
    }

    void print() const {
        cout << a << " + " << b << "i";
    }
};

double absVal(float x) {
    return (x >= 0) ? x : -x;
}

int main() {
    float x = -2.3f;
    Complex z(5, -12);

    cout << "Valoarea absoluta a numarului real " << x << " este: " << absVal(x) << endl;
    cout << "Valoarea absoluta a numarului complex ";
    z.print();
    cout << " este: " << z.absVal() << endl;

    return 0;
}